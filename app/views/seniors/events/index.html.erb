<div class="container">

<h2>カレンダー</h2>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>　時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to '詳細', event %></td>
        <td>|</td>
        <td><%= link_to '編集', edit_event_path(event.id) %></td>
        <td>|</td>
        <td><%= link_to '削除',event_path(event.id), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3><%= link_to '予定を入力', new_event_path, class: 'btn btn-primary' %></h3>

<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
    <div>
      <%= link_to event.title, event %>
    </div>
  <% end %>
<% end %>
</div>
</div>
